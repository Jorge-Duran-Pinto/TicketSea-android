<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TicketSea" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="tieCountTickets" >
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/shape_textinputlayout</item>
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="boxBackgroundMode">none</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
    </style>
    <style name="TextInputLayout" parent="tieCountTickets">
        <item name="android:background">@null</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
    </style>
</resources>